@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List of Producers";
}

<h1>Welcome to Producers View - Index</h1>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(m => m.FullName)</th>
                <th>@Html.DisplayNameFor(m => m.Bio)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle w" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px; max-height: 100px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m => item.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi-pencil"></i>Edit</a>|
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-arrow-down-right"></i>Details</a>|
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_CreateItem", "Producers") 