@model IEnumerable<Actor>
@{
    ViewData["Title"] = "List of Actors";
 }

<h1>Welcome to Actors View - Index</h1>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(m => m.FullName)</th>
                <th>@Html.DisplayNameFor(m => m.Bio)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="align-middle">
                    <img class="rounded-circle w" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px; max-height: 100px" />
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(m => item.FullName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(m => item.Bio)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary"><i class="bi-pencil"></i>Edit</a>|
                    <a class="btn btn-outline-info"><i class="bi bi-arrow-down-right"></i>Details</a>|
                    <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>